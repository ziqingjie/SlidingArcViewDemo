<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0083e0"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/scv_box"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.slidingarcviewdemo.view.CustomBubbleView
        android:id="@+id/mBubbleView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.slidingarcviewdemo.view.SlidingArcView
        android:id="@+id/slidingArcView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        app:arcWidth="28dp"
        app:layout_constraintTop_toBottomOf="@id/scv_box" />


</androidx.constraintlayout.widget.ConstraintLayout>